// Place your settings in this file to overwrite the default settings
{
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
  "editor.fontFamily": "Monoid NF",
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": false,
  "editor.lineHeight": 17,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.renderIndentGuides": true,
  "editor.rulers": [80, 120],
  "editor.mouseWheelZoom": false,
  "ecdc.collectTelemetry": false,
  "editor.codeLens": false,
  "editor.lineNumbers": "relative",

  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "*/obj": true,
    "**/*.js": { "when": "$(basename).ts"}
  },

  "git.path": "C:/Users/mgondermann/Portable/Git/bin/git.exe",

  "terminal.external.windowsExec": "C:/Users/mgondermann/Portable/cmder/Cmder.exe",

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "window.zoomLevel": 0,
  "extensions.autoUpdate": true,
  "gherkin-indent.stepIndent": 4,
  
  "csharp.suppressDotnetInstallWarning": true,
  "csharp.suppressDotnetRestoreNotification": true,
  "FSharp.automaticProjectModification": true,

   "plantuml.exportFormat": "png",
  "plantuml.exportSubFolder": false,
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorTheme": "Gruvbox Dark (Medium)",
  "workbench.iconTheme": "vscode-icons",
  "vsicons.projectDetection.autoReload": true,
  "vim.disableAnnoyingNeovimMessage": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "C:\\tools\\neovim\\Neovim\\bin\\nvim.exe"
}
