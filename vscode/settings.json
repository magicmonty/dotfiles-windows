// Place your settings in this file to overwrite the default settings
{
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
  "editor.fontFamily": "Monoid NF",
  "editor.fontLigatures": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 120],
  "editor.mouseWheelZoom": false,
  "editor.lineNumbers": "relative",
  "editor.snippetSuggestions": "bottom",
  "editor.wordBasedSuggestions": false,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "*/obj": true,
    "**/*.js": { "when": "$(basename).ts"}
  },

  "terminal.external.windowsExec": "C:/Users/mgondermann/Portable/cmder/Cmder.exe",
  "terminal.integrated.fontFamily": "Monoid NF",
  "terminal.integrated.fontSize": 12,


  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",

  "extensions.autoUpdate": true,

  "csharp.suppressDotnetInstallWarning": true,
  "csharp.suppressDotnetRestoreNotification": true,
  "omnisharp.disableMSBuildDiagnosticWarning": true,

  "workbench.iconTheme": "vscode-great-icons",

  "omnisharp.projectLoadTimeout": 240,

  "breadcrumbs.enabled": true,

  "git.enableSmartCommit": true,
"git.autofetch": true,

  "gitlens.defaultDateFormat": "DD.MM.YYYY hh:mm:ss",
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.codeLens.scopes": [
    "document",
    "containers",
    "blocks"
  ],
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true
  },

  "FSharp.disableFailedProjectNotifications": true,
  "FSharp.enableTouchBar": false,
  "FSharp.showExplorerOnStartup": false,
  "editor.suggestSelection": "first",
  "FSharp.externalAutocomplete": true,
  "FSharp.infoPanelReplaceHover": true,
  "FSharp.infoPanelUpdate": "both",
  "FSharp.smartIndent": true,
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.message.update.show": false,
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "omnisharp.enableEditorConfigSupport": true,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "openhab.host": "openhab.fritz.box",
  "FSharp.useSdkScripts": true,
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[openhab]": {
    "editor.defaultFormatter": "max-beckenbauer.oh-alignment-tool"
  },
  "remote.SSH.connectTimeout": 60,
  "sshfs.configs": [
    {
      "name": "openhab",
      "host": "openhab.fritz.box",
      "privateKeyPath": "/home/mgondermann/.ssh/id_ecdsa",
      "username": "openhabian",
      "root": "/etc/openhab2"
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "oh-alignment-tool.enableBetaFeatures": true,
  "openhab.sitemapPreviewUI": "basicui",
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": ""
    }
  ],
  "editor.fontSize": 12,
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "json",
    "jsonc"
  ],
  "workbench.colorTheme": "Nightfox",
  "settingsSync.ignoredExtensions": [
    "undefined.nightfox"
  ],
  "eslint.validate": [
    "javascript", "typescript", "json", "jsonc", "json5"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "redhat.telemetry.enabled": false,
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "[sql]": {
    "editor.defaultFormatter": "ms-mssql.mssql"
  },
  "mssql.format.datatypeCasing": "uppercase",
  "mssql.format.keywordCasing": "uppercase",
  "mssql.format.placeSelectStatementReferencesOnNewLine": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "editor.multiCursorModifier": "ctrlCmd",
  "eslint.packageManager": "yarn",
  "sonarlint.ls.javaHome": "c:\\Users\\martin.gondermann\\.vscode\\extensions\\sonarsource.sonarlint_managed-jre\\jre\\jdk-11.0.15+10-jre",
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false,
}
